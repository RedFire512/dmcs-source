"UnlitTwoTexture" // "UnlitGeneric"
{
	"$basetexture"   "console/background01"
	"$vertexcolor"   "1"
	"$vertexalpha"   "1"
	"$ignorez"       "1"
	"$no_fullbright" "1"
	"$nolod"         "1"
	"$texture2"      "console/smoke"

	"$var_scale2"	 "1"
	"$var_rotate2"	 "0"

	"$var_scale"	 "1"

	"Proxies"
	{

		"Sine"
		{
			"resultVar"	"$color"
			"sineperiod"	4	         // this is the time the fade between light and dark will take
			"sinemin"	0.95,0.95,0.95   // these numbers are the 2 brightnesses it will pulse between
			"sinemax"	1.6,1.6,1.6   // 1.0,1.0,1.0 will make the texture apear as it does in photoshop
		}                                        // 2.0,2.0,2.0 will make it twice as bright and 0.0 will make it black
		
		"Sine"
		{
			"resultVar"	"$var_scale2"
			"sineperiod"	25         
			"sinemin"	0.9
			"sinemax"	1.2
		}                          

		"Sine"
		{
			"resultVar"	"$var_rotate2"
			"sineperiod"	360         
			"sinemin"	0
			"sinemax"	360
		}                          

		"TextureTransform"
		{
			"centervar"	"0"
			"scalevar"	"$var_scale2"
			"rotatevar"	"$var_rotate2"
			"translatevar"	"0"
			"resultvar"	"$texture2transform" 
		}

		"Sine"
		{
			"resultVar"	"$var_scale"
			"sineperiod"	20         
			"sinemin"	0.98
			"sinemax"	1.0
		}                          

		"TextureTransform"
		{
			"centervar"	"0"
			"scalevar"	"$var_scale"
			"rotatevar"	"0"
			"translatevar"	"0"
			"resultvar"	"$basetexturetransform"  
		}
	}
}

